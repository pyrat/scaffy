%h1 View <%= singular_name.titleize %>

<%- for attribute in attributes -%>
%p
  %strong <%= attribute.column.human_name.titleize %>:
  =h @<%= singular_name %>.<%= attribute.name %>
<%- end -%>

%p
  <%- if action? :edit -%>
  = link_to "Edit", edit_<%= url_singular_name %>_path(@<%= singular_name %>)
  |
  <%- end -%>
  <%- if action? :destroy -%>
  = link_to "Destroy", <%= url_singular_name %>_path(@<%= singular_name %>), :confirm => 'Are you sure?', :method => :delete
  |
  <%- end -%>
  <%- if action? :index -%>
  = link_to "View All", <%= url_plural_name %>_path
  <%- end -%>
